<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <TextView
       android:padding="5dp"
       android:text="各种viewpager的滑动效果"
       android:gravity="center_horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />

   <TextView
       android:id="@+id/viewpager_common"
       android:padding="5dp"
       android:layout_marginTop="20dp"
       android:text="普通viewpager"
       android:gravity="center_horizontal"
       android:layout_width="wrap_content"
       android:background="#33000000"
       android:layout_height="wrap_content" />

   <TextView
       android:id="@+id/viewpager_invent"
       android:padding="5dp"
       android:layout_marginTop="20dp"
       android:text="viewpager---3D切换效果"
       android:background="#33000000"
       android:gravity="center_horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

   <TextView
       android:id="@+id/viewpager_depth"
       android:padding="5dp"
       android:layout_marginTop="20dp"
       android:text="viewpager---层层切换"
       android:background="#33000000"
       android:gravity="center_horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

   <TextView
       android:id="@+id/viewpager_zoomout"
       android:padding="5dp"
       android:layout_marginTop="20dp"
       android:text="viewpager---缩放翻页"
       android:background="#33000000"
       android:gravity="center_horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />


</LinearLayout>
